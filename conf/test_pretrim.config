/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 * nextflow run nf-core/eager -profile test, docker (or singularity, or conda)
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  genome = "Custom"
  //Input data
  singleEnd = false
  readPaths = [['JK2782_TGGCCGATCAACGA_L008', ['https://github.com/jfy133/test-datasets/raw/eager/testdata/Mammoth/fastq/JK2782_TGGCCGATCAACGA_L008_R1_001.fastq.gz.tengrand.fq.pair1.truncated.fq.gz','https://github.com/jfy133/test-datasets/raw/eager/testdata/Mammoth/fastq/JK2782_TGGCCGATCAACGA_L008_R1_001.fastq.gz.tengrand.fq.pair2.truncated.fq.gz']],
  ]
  // Genome references
  fasta = 'https://raw.githubusercontent.com/jfy133/test-datasets/eager/reference/Mammoth/Mammoth_MT_Krause.fasta'
}

tower {
  accessToken = '1c1f493bc2703472d6f1b9f6fb9e9d117abab7b1'
  enabled = true
}